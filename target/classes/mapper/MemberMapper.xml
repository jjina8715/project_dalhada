<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="resource.MemberMapper">
 	<!-- listAll  -->
 	<select id="selectMember"  resultType="vo.MemberinfoVO">
    	select id, password, image_path, email, my_words from memberinfo
 	</select>
 	
 	<!-- insert -->
 	 <insert id="insertMember"  parameterType="vo.MemberinfoVO">
 	 INSERT INTO memberinfo VALUES
       (#{id},#{password},#{image_path},#{email},NULL)			  
	</insert>
	
	<!--  checkId -->
	<select id="checkId" parameterType="string" resultType="vo.MemberinfoVO">
		select id from memberinfo where id = #{id}
	</select> 
	
	<!--  check Login -->
	<select id="login" parameterType="string" resultType="vo.MemberinfoVO">
		select * from memberinfo where id=#{id} and password=#{password}
	</select>
	
</mapper>